<p id="notice"><%= notice %></p>

<h1>To Do's</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Task</th>
      <th>Completed at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td>
        <%= form_with(model: todo, url: toggle_todo_path(todo)) do |form| %>
          <%= form.check_box :completed_at, checked: todo.completed_at?, onchange: "this.form.submit()"
 %>
        <% end %>
        </td>
        <td><%= link_to todo.task, todo %></td>
        <td><%= todo.completed_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New To Do', new_todo_path %>
